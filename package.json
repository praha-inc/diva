{
  "name": "@praha/diva",
  "version": "1.0.2",
  "description": "Diva, short for “Dependency Injection Value,” is a lightweight and type-safe DI library designed for TypeScript.",
  "keywords": [
    "javascript",
    "typescript",
    "dependency",
    "injection",
    "di"
  ],
  "homepage": "https://github.com/praha-inc/diva/blob/main/README.md",
  "bugs": {
    "url": "https://github.com/praha-inc/diva/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/praha-inc/diva.git"
  },
  "license": "MIT",
  "author": "PrAha, Inc.",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.cjs"
      },
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    },
    "./test": {
      "require": {
        "types": "./dist/cjs/test/index.d.ts",
        "default": "./dist/cjs/test/index.cjs"
      },
      "import": {
        "types": "./dist/esm/test/index.d.ts",
        "default": "./dist/esm/test/index.js"
      }
    }
  },
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.js",
  "types": "./dist/cjs/index.d.ts",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "rslib build",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "lint:code": "eslint .",
    "lint:type": "tsc --noEmit",
    "version": "changeset",
    "version:apply": "changeset version",
    "version:publish": "changeset publish",
    "version:prepublish": "pkg-pr-new publish --pnpm --compact"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.5.2",
    "@changesets/cli": "2.29.8",
    "@praha/eslint-config-common": "4.0.3",
    "@praha/eslint-config-definer": "2.0.2",
    "@praha/eslint-config-javascript": "3.0.11",
    "@praha/eslint-config-style": "3.0.12",
    "@praha/eslint-config-typescript": "3.0.12",
    "@rslib/core": "0.19.6",
    "@tsconfig/strictest": "2.0.8",
    "@types/node": "25.3.0",
    "eslint": "10.0.2",
    "pkg-pr-new": "0.0.63",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  },
  "packageManager": "pnpm@10.30.2",
  "publishConfig": {
    "provenance": true
  }
}
